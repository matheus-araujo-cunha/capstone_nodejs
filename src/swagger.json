{
    "openapi":"3.0.0",
    "info":{
        "title":"Capstone NodeJs API",
        "description": "Essa é uma API de cadastro de usuários e locação de embarcações",
        "version":"1.0.0"
    },
    "servers":[
        {"url":"https://localhost:3000"}
    ],
    "paths":{
        "/rents":{
            "post":{
                "tags":["Rent"],
                "parameters": [
                    {
                        "name":"token",
                        "in":"header",
                        "description":"Token to be passed as a header",
                        "required": true,
                        "schema":{
                            "type": "string"
                        },
                        "style":"simple"
                    }
                ],
                "description":"Rota de locação de uma embarcação",
                "requestBody":{
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref":"#components/schemas/Rent"
                            },
                            "examples":{
                                "rent":{
                                    "value":{
                                        "value":250.00,
                                        "itemId":"5dcd50ae-7a47-4851-8385-83608f50b4f8",
                                        "startDate":"Thu Jun 09 2022 10:01:34 GMT-0300",
                                        "finishDate":"Tue Dec 06 2022 00:00:00 GMT-0300"
                                    }
                                }
                            }
                        }
                        
                    }
                },
                "responses": {
                    "201":{
                        "description": "Created",
                        "content":{
                            "application/json":{
                            "schema":{
                                "type":"object",
                                "$ref":"#/components/schemas/Rent"
                            }
                        }
                    }
                    },
                    "400":{
                        "description": "Missing required fields"
                    },
                    "401":{
                        "description":"Unauthorized"
                    }
                }
                
            }
        },
        "/rents/:id":{
            "get":{
                "tags":["Rent"],
                "parameters":[
                    {
                        "name":"id",
                        "in":"path",
                        "description": "ID of rent to get",
                        "required":true,
                        "schema":{
                            "type":"string"
                        },
                        "style":"simple"
                    },
                    {
                        "name":"token",
                        "in":"header",
                        "description":"Token to be passed as a header",
                        "required": true,
                        "schema":{
                            "type": "string"
                        },
                        "style":"simple"
                    }
                ],
                "description": "Rota de listar uma locação específica.",
                "responses": {
                 "200":{
                     "description":"OK",
                     "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "$ref":"#/components/schemas/RentCreated"
                            }
                        }
                     }
                 },
                 "404":{
                    "description":"Not found.",
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "default":{
                                    "message":"Rent not found."
                                }
                            }
                        }
                    }
                },
                "401":{
                    "description": "Unauthorized.",
                    "content": {
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "default":{
                                    "message":"Unauthorized."
                                }
                            }
                        }
                    }
                }   
                }
            },
            "delete":{
                "tags":["Rent"],
                "parameters":[
                    {
                        "name":"id",
                        "in":"path",
                        "description": "ID of rent to delete",
                        "required":true,
                        "schema":{
                            "type":"string"
                        },
                        "style":"simple"
                    }
                ],
                "description": "Rota de deletar uma locação específica",
                "responses":{

                    "204":{
                        "description": "No content.",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object"
                                }
                            }
                        }
                    },
                    "404":{
                        "description":"Not found.",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "default":{
                                        "message":"Rent not found."
                                    }
                                }
                            }
                        }
                    },
                    "401":{
                        "description": "Unauthorized.",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "default":{
                                        "message":"Unauthorized."
                                    }
                                }
                            }
                        }
                    }
                }
                
            }
        }
        
    }, "components": {
        "schemas":{
            "Rent":{
                "type":"object",
                "properties":{
                    "value":{
                        "type":"number"
                    },
                    "itemId":{
                        "type":"string"
                    },
                    "startDate":{
                        "type":"string",
                        "format":"date"
                    },
                    "finishDate":{
                        "type":"string",
                        "format":"date"
                    }
                }
            },
            "RentCreated":{
                "type":"object",
                "properties":{
                    "id":{
                        "type":"string",
                        "format":"uuid"
                    },"value":{
                        "type":"number"
                    },
                    "startDate":{
                        "type":"string",
                        "format":"date"
                    },
                    "finishDate":{
                        "type":"string",
                        "format":"date"
                    },"item":{
                        "type":"object",
                        "properties": {
                            "id":{
                                "type":"string"
                            },
                            "model":{
                                "type":"string"
                            },
                            "brand":{
                                "type":"string"
                            },
                            "year":{
                                "type":"number"
                            },
                            "capacity":{
                                "type":"number"
                            },
                            "location":{
                                "type":"string"
                            },
                            "dailyPrice":{
                                "type":"number"
                            },
                            "service":{
                                "type":"boolean"
                            },
                            "image":{
                                "type":"string"
                            },
                            "owner":{
                                "type":"object",
                                "properties":{
                                    "id":{
                                        "type":"string"
                                    },
                                    "name":{
                                        "type":"string"
                                    },
                                    "email":{
                                        "type":"string"
                                    },
                                    "phone":{
                                        "type":"string"
                                    }
                                }
                            }
                        }
                    }

                }
            }
        }
    }
 
}